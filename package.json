{
  "name": "@decent-org/wallet-provider",
  "version": "0.1.14",
  "description": "Using ![Web3 Modal](https://web3modal.com) to connect Ethereum or EVM supported wallets.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "typings": "dist/index.d.ts",
  "peerDependencies": {
    "react": "^16 || ^17 || ^18",
    "react-dom": "^16 || ^17 || ^18"
  },
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "blockchain",
    "web3",
    "wallet",
    "provider",
    "react",
    "typescript",
    "web3modal"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "clean": "rm -rf dist",
    "clean:sandbox": "cd sandbox && rm -rf node_modules",
    "clean:sandbox_iframe": "cd sandbox-iframe && rm -rf node_modules",
    "clean:node_modules": "rm -rf node_modules && npm run clean:sandbox && npm run clean:sandbox_iframe",
    "clean:all": "npm run clean && npm run clean:node_modules",
    "install:sandbox": "cd sandbox && npm install",
    "install:sandbox_iframe": "cd sandbox-iframe && npm install",
    "install:packages": "npm run clean:all && npm install && npm run install:sandbox && npm run install:sandbox_iframe",
    "build": "microbundle --jsx React.createElement && cp package.json README.md ./dist",
    "create:link": "cd ./dist && npm link && cd ..",
    "set:link_sandbox": "cd sandbox && npm link @decent-org/wallet-provider",
    "set:link_sandbox_iframe": "cd sandbox-iframe && npm link @decent-org/wallet-provider",
    "build:link": "npm run clean && npm run lint:fix && npm run build && npm run create:link && npm run set:link_sandbox && npm run set:link_sandbox_iframe",
    "build:watch": "microbundle --watch --jsx React.createElement",
    "start:sandbox": "cd sandbox && npm run start",
    "start:sandbox_iframe": "cd sandbox-iframe && npm run start",
    "dev": "npm run install:packages && npm run build:link && npm run start:sandbox"
  },
  "author": "Decent DAO",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^16.14.28",
    "@types/react-dom": "^16.9.16",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ethvault/iframe-provider": "^0.1.10",
    "@walletconnect/ethereum-provider": "^1.7.8",
    "ethers": "^5.6.9",
    "web3modal": "^1.9.8"
  }
}
